// Simulación de base de datos local
const usuarios = [
  {
    correo: "admin",
    contraseña: "12345",
    nombre: "Administrador"
  }
];

let mensaje = '';
if (Astro.request.method === 'POST') {
  const data = await Astro.request.formData();
  const correo = data.get('correo');
  const contraseña = data.get('contraseña');

  // Buscar usuario
  const usuario = usuarios.find(u => u.correo === correo && u.contraseña === contraseña);

  if (usuario) {
    // Iniciar sesión con cookie
    Astro.cookies.set('auth', 'true', {
      path: '/',
      maxAge: 60 * 60, // 1 hora
    });
    return Astro.redirect('/admin');
  } else {
    mensaje = 'Credenciales incorrectas';
  }
}
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Iniciar Sesión | Gentleman's Barber</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style is:global>
    :root {
      --primary-color: #1a1a1a;
      --secondary-color: #333333;
      --accent-color: #c8a97e;
      --text-color: #f5f5f5;
      --light-gray: #888888;
    }
    body {
      margin: 0;
      font-family: 'Playfair Display', serif;
      background-color: var(--primary-color);
      color: var(--text-color);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      transition: background 0.3s ease;
    }
    .login-container {
      background: var(--secondary-color);
      padding: 2.5rem 2rem 2rem 2rem;
      border-radius: 12px;
      box-shadow: 0 10px 20px rgba(0,0,0,0.18);
      width: 100%;
      max-width: 400px;
      animation: fadeIn 0.7s ease;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    h2 {
      text-align: center;
      color: var(--accent-color);
      margin-bottom: 2rem;
      font-size: 2rem;
      letter-spacing: 1px;
    }
    form {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 1.2rem;
      align-items: center;
    }
    input {
      width: 100%;
      padding: 1rem;
      border: 1px solid var(--light-gray);
      border-radius: 8px;
      background-color: var(--primary-color);
      color: var(--text-color);
      font-size: 1rem;
      transition: border 0.3s, box-shadow 0.3s;
      box-sizing: border-box;
    }
    input:focus {
      border-color: var(--accent-color);
      outline: none;
      box-shadow: 0 0 0 2px rgba(200, 169, 126, 0.18);
    }
    button {
      width: 60%;
      padding: 0.9rem 0;
      border: none;
      border-radius: 8px;
      background-color: var(--accent-color);
      color: var(--primary-color);
      font-size: 1.1rem;
      font-weight: bold;
      cursor: pointer;
      margin-top: 0.5rem;
      transition: background 0.3s, transform 0.2s;
      box-shadow: 0 2px 8px rgba(200, 169, 126, 0.08);
      align-self: center;
    }
    button:hover {
      background-color: #d1b894;
      transform: scale(1.04);
    }
    .error {
      color: #ff6b6b;
      background: rgba(255,107,107,0.08);
      border-radius: 6px;
      text-align: center;
      margin-bottom: 1rem;
      padding: 0.7rem 0.5rem;
      font-size: 1rem;
      width: 100%;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    @media (max-width: 500px) {
      .login-container {
        padding: 1.5rem 0.5rem 1.5rem 0.5rem;
      }
      h2 {
        font-size: 1.3rem;
      }
      button {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <div class="login-container">
    <h2>Iniciar Sesión</h2>
    {mensaje ? `<p class="error">${mensaje}</p>` : ''}
    <form method="post">
      <input type="text" name="correo" placeholder="Nombre de usuario" required autocomplete="username" />
      <input type="password" name="contraseña" placeholder="Contraseña" required autocomplete="current-password" />
      <button type="submit">Ingresar</button>
    </form>
  </div>
</body>
</html>